{
  "name": "express-react-project-example",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "_delete:db": "rimraf .data/db",
    "_init:db": "docker-compose exec -u postgres db /var/tmp/pg/load-data.sh",
    "delete:db": "run-s stop:db _delete:db",
    "heroku:deploy": "git push -f heroku HEAD:main",
    "heroku:psql": "docker-compose run --rm -e DATABASE_URL=$(heroku config:get DATABASE_URL) db /bin/ash -c 'psql ${DATABASE_URL}'",
    "heroku:setup": "bin/setup-heroku.sh",
    "heroku:dashboard": "open https://dashboard.heroku.com/apps/$(heroku apps | sed -n '2 p')",
    "init:db": "run-s delete:db start:db _init:db",
    "postinstall": "(cd app && npm install); (cd server && npm install)",
    "psql": "docker-compose exec -u postgres db /bin/ash -c 'psql ${POSTGRES_DB}'",
    "start": "run-p start:db start:server start:app",
    "start:app": "cd app && npm start",
    "start:db": "docker-compose up -d",
    "start:server": "cd server && npm start",
    "stop:db": "docker-compose down"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gsong/express-react-project-example.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/gsong/express-react-project-example/issues"
  },
  "homepage": "https://github.com/gsong/express-react-project-example#readme",
  "dependencies": {
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2"
  }
}
